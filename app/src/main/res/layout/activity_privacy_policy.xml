<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/privacy_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:padding="8dp"
                android:background="@drawable/back_button_bg"
                android:contentDescription="Back Button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Privacy Policy"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

        </RelativeLayout>

        <!-- Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:textSize="28sp"
                    android:textColor="#1a237e"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last updated: January 02, 2026"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="20dp"/>

                <!-- Introduction -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Introduction"
                    android:textSize="20sp"
                    android:textColor="#1a237e"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calculator Pro (&quot;we&quot;, &quot;our&quot;, or &quot;us&quot;) is committed to protecting your privacy. This Privacy Policy explains how we handle your information when you use our Calculator Pro application."
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="20dp"/>

                <!-- Information Collection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Information We Collect"
                    android:textSize="20sp"
                    android:textColor="#1a237e"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calculator Pro is designed with your privacy in mind. We DO NOT collect, store, or transmit any personal information or calculation data outside of your device. All calculations and history are stored locally on your device only."
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="20dp"/>

                <!-- Data Storage -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Storage"
                    android:textSize="20sp"
                    android:textColor="#1a237e"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Calculation history is stored locally on your device\n• No data is sent to external servers\n• You can clear your history at any time\n• Uninstalling the app will remove all stored data"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginBottom="20dp"/>

                <!-- Permissions -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Permissions"
                    android:textSize="20sp"
                    android:textColor="#1a237e"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calculator Pro does not require any special permissions. The app operates entirely offline and does not access your contacts, location, camera, or any other sensitive information."
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="20dp"/>

                <!-- Third-Party Services -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Third-Party Services"
                    android:textSize="20sp"
                    android:textColor="#1a237e"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calculator Pro does not integrate with any third-party analytics, advertising, or tracking services. Your usage of the app is completely private."
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="20dp"/>

                <!-- Children's Privacy -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Children's Privacy"
                    android:textSize="20sp"
                    android:textColor="#1a237e"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calculator Pro is safe for users of all ages. Since we do not collect any personal information, there are no special concerns regarding children's use of the app."
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="20dp"/>

                <!-- Changes to Policy -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Changes to This Policy"
                    android:textSize="20sp"
                    android:textColor="#1a237e"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We may update this Privacy Policy from time to time. Any changes will be posted within the app, and the &quot;Last updated&quot; date will be revised accordingly."
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="20dp"/>

                <!-- Contact -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textSize="20sp"
                    android:textColor="#1a237e"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If you have any questions about this Privacy Policy, please contact us through the app store where you downloaded Calculator Pro."
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>